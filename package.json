{
  "name": "platzi-webpack-4",
  "version": "1.0.0",
  "description": "Platzi - Curso de Webpack 4",
  "main": "index.js",
  "scripts": {
    "build": "webpack --entry ./index.js --output ./bundle.js --mode development",
    "build:local": "webpack --mode production",
    "build:external": "webpack --config ./external/webpack.config.js",
    "build:multi": "webpack --config ./multi-entry-points/webpack.config.js",
    "build:css": "webpack --config ./css-style-loader/webpack.config.js",
    "build:plugins": "webpack --config ./plugins/webpack.config.js",
    "build:dev": "webpack --config ./webpack-dev-server/webpack.config.js --watch",
    "build:dev-server": "webpack-dev-server --config ./webpack-dev-server/webpack.config.js",
    "build:babel": "webpack --config ./babel/webpack.config.js",
    "build:babel-dev": "webpack-dev-server --config ./babel/webpack.config.js",
    "build:react": "webpack --config ./react/webpack.config.js",
    "build:react-dev": "webpack-dev-server --config ./react/webpack.config.js"
  },
  "keywords": [
    "webpack"
  ],
  "author": "Maximiliano \"Mex\" Delgado <mdelgado@tresdoce.com.ar>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rudemex/platzi-webpack-4.git"
  },
  "bugs": {
    "url": "https://github.com/rudemex/platzi-webpack-4/issues"
  },
  "homepage": "https://github.com/rudemex/platzi-webpack-4#readme",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.10.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/plugin-transform-runtime": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "babel-loader": "^8.1.0",
    "css-loader": "^2.1.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.7.0",
    "style-loader": "^1.2.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
